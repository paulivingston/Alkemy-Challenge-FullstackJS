<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/records/edit/{{records.id}}" method="post">
                        <div class="mb-3">
                            <input type="text" value="{{records.title}}" class="form-control" name="title" placeholder="Title" autofocus>
                        </div>
                        <div class="mb-3">
                            <input type="url" value="{{records.url}}" class="form-control" name="url" placeholder="Url">
                        </div>
                        <div class="mb-3">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description">{{records.description}}</textarea>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>    
    </div>
</div>